VERTEX_INDEX_ENDPOINT_ID=projects/mobius-os-dev/locations/us-central1/indexEndpoints/156370344679047168
VERTEX_DEPLOYED_INDEX_ID=mobius_chat_dev_stream
VERTEX_INDEX_ID=3638462097194483712
VERTEX_INDEX_MODE=streaming

# =============================================================================
# SERVICE-SPECIFIC SETTINGS
# =============================================================================

# --- MOBIUS-CHAT ---
CHAT_DEBUG_TRACE=1
CHAT_LIVE_STREAM=1
MOBIUS_OS_AUTH_URL=http://localhost:5001

# --- MOBIUS-OS BACKEND ---
DATABASE_MODE=cloud
CLOUDSQL_CONNECTION_NAME=mobius-os-dev:us-central1:mobius-platform-dev-db
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-prod
ENABLE_FIRESTORE=false

# --- MOBIUS-RAG ---
LLM_PROVIDER=vertex
VERTEX_MODEL=gemini-1.5-pro

# --- MOBIUS-DBT ---
POSTGRES_DB=mobius_rag
CHAT_DATABASE_URL=postgresql://postgres:MobiusDev123$@34.135.72.145:5432/mobius_chat
VERTEX_PROJECT=mobius-os-dev
VERTEX_REGION=us-central1
VERTEX_INDEX_MODE=batch
GCS_PREFIX=chat_rag_index

# --- MOBIUS-USER ---
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001
DEFAULT_TENANT_NAME=Default Tenant

# --- MOBIUS-SKILLS WEB-SCRAPER ---
SCRAPER_REQUEST_KEY=mobius:scraper:requests
SCRAPER_RESPONSE_KEY_PREFIX=mobius:scraper:response:
SCRAPER_RESPONSE_TTL_SECONDS=86400
TREE_MAX_DEPTH=3
TREE_MAX_PAGES=50
SCOPE_MODE=same_domain
DOCUMENT_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx

